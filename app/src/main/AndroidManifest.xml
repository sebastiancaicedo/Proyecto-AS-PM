<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blartenix.proyecto_as_pm">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AsignaturasActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EvaluacionesActivity"
            android:label="@string/title_activity_evaluaciones"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RubricasActivity"
            android:label="@string/title_activity_rubricas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EstudiantesActivity"
            android:label="@string/title_activity_estudiantes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CrearRubricaActivity"
            android:label="@string/title_activity_crear_rubrica"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EvaluarActivity"
            android:label="@string/title_activity_evaluar"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>